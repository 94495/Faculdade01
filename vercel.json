{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "builds": [
    {
      "src": "api/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/api/tutorial.php",
      "headers": {
        "Location": "/tutorial"
      },
      "status": 307
    },
    {
      "src": "/",
      "dest": "/api/index.php"
    },
    {
      "src": "/tutorial",
      "dest": "/api/tutorial.php"
    },
    {
      "src": "/public/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PHP_DEPENDENCIES": "true"
  }
}
